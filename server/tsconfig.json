{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "exclude": ["node_modules", "dist", "**/*.spec.ts"],
  "include": ["src/**/*"]
}
